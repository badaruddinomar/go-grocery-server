generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  SUPER_ADMIN
  CUSTOMER
  SUPPORT
}

enum ProductUnitType {
  KG
  GM
  L
  ML
  PCS
  PACK
  BUNDLE
  DOZEN
}

model User {
  userId     Int      @id @default(autoincrement())
  email      String   @unique
  name       String
  phone      String?  @unique
  address    String?
  password   String
  role       UserRole @default(CUSTOMER)
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([phone, email])
}

model Image {
  imageId   Int     @id @default(autoincrement())
  url       String
  publicId  String  @unique
  isPrimary Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productId Int?
  product   Product? @relation(fields: [productId], references: [productId])

  categoryId Int?      @unique
  category   Category? @relation(fields: [categoryId], references: [categoryId])
}

model Category {
  categoryId  Int       @id @default(autoincrement())
  name        String    @unique
  image       Image?
  imageId     Int?
  description String?
  products    Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
}

model Product {
  productId                Int             @id @default(autoincrement())
  name                     String
  description              String?
  images                   Image[]
  unitType                 ProductUnitType @default(GM)
  unitPrice                Decimal         @default(0) // Price per smallest unit (e.g. per gram)
  packageSize              Float           @default(1) // Selling unit (e.g. 250 for 250g packages)
  stockQuantity            Int             @default(0) // Stock stored in units matching unitType
  reorderLevel             Int             @default(0) // Minimum stock level to trigger reorder
  isSubscription           Boolean         @default(false)
  isPreorder               Boolean         @default(false)
  isPrivateImages          Boolean         @default(false)
  preorderAvailabilityDate DateTime?
  createdAt                DateTime        @default(now())
  updatedAt                DateTime        @updatedAt
  categoryId               Int
  category                 Category        @relation(fields: [categoryId], references: [categoryId])

  @@index([categoryId])
  @@index([productId])
}
